@model ERPSolution.MVC.Models.ProductionModels.ProductionModel
@{
    ViewData["Title"] = "ProductionOderView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Lệnh Sản Xuất";
}
<div class="card">
    <div class="card-header">
        <i class="fa fa-align-justify"></i> Lệnh Sản Xuất
    </div>
    <div class="card-body">
        <div class="card-body">
            @* Add new item button *@
            <button class="btn btn-primary mb-2" type="button" aria-pressed="true">
                <i class="fa fa-plus-circle" aria-hidden="true"> Add New</i>
            </button>
            <table class="table table-responsive-sm">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model.productionOrders)
                        {
                            <tr>
                                <td>@item.Code</td>
                                <td>@item.Name</td>
                                <td>@item.StartDate?.ToString("dd-MMM-yyyy")</td>
                                <td>@item.EndDate?.ToString("dd-MMM-yyyy")</td>
                                <td>
                                    <button class="btn btn-danger">
                                        <i class="nav-icon fa fa-trash" aria-hidden="true"> Delete</i>
                                    </button>
                                    <a class="btn btn-success" 
                                       asp-controller="ProductionOrder"
                                       asp-action="ShowDetailView">
                                       <i class="nav-icon fa fa-pencil-square-o" aria-hidden="true"> Edit</i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>